<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight">
        <!-- Customize your theme here. -->
        <!--<item name="colorPrimary">@color/sankalp</item>-->
        <!-- <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>-->
        <item name="preferenceTheme">@style/PreferenceThemeOverlay</item>

    </style>

    <style name="SankalpSplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/sankalp_splash</item>
    </style>

    <style name="SankalpTheme" parent="SankalpDeepPurpleTheme">
        <item name="android:textColorPrimary">@color/sankalp_primary_text</item>
        <item name="android:textColorSecondary">@color/sankalp_secondary_text</item>
        <item name="android:divider">@color/sankalp_divider</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="android:actionModeBackground">?attr/colorPrimary </item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay</item>
    </style>

    <style name="SankalpLightPurple" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/sankalp_primary</item>
        <item name="colorPrimaryDark">@color/sankalp_primary_dark</item>
        <item name="colorAccent">@color/sankalp_accent</item>

    </style>

    <style name="SankalpThemeActionBar" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/sankalp_primary_deep_purple</item>
        <item name="colorPrimaryDark">@color/sankalp_primary_dark_deep_purple</item>
        <item name="colorAccent">@color/sankalp_accent_deep_purple</item>
        <item name="android:textColorPrimary">@color/sankalp_primary_text</item>
        <item name="android:textColorSecondary">@color/sankalp_secondary_text</item>
        <item name="android:divider">@color/sankalp_divider</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="android:actionModeBackground">@color/sankalp_primary </item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay</item>
    </style>

    <style name="SankalpOrangeTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/sankalp_primary_orange</item>
        <item name="colorPrimaryDark">@color/sankalp_primary_dark_orange</item>
        <item name="colorAccent">@color/sankalp_accent_orange</item>
    </style>

    <style name="SankalpDeepPurpleTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/sankalp_primary_deep_purple</item>
        <item name="colorPrimaryDark">@color/sankalp_primary_dark_deep_purple</item>
        <item name="colorAccent">@color/sankalp_accent_deep_purple</item>
    </style>


