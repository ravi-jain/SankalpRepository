
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true" >
<RelativeLayout
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/sankalpListFrame"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".fragments.SpDashboardFragment">

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/addSankalpButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/fab_margin"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_gravity="end|bottom"
        android:src="@android:drawable/ic_input_add" />

    <TextView
        android:id="@+id/db_tv_1"
        android:text = "@string/tyag"
        style="@style/SpLabel" />
    <View
        android:id="@+id/db_v_1"
        android:layout_below="@id/db_tv_1"
        style="@style/SpHorizontalDivider" />
    <ListView
        android:id="@+id/tyagListview_dashboard"
        android:layout_below="@id/db_v_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/db_tv_2"
        android:layout_below="@id/tyagListview_dashboard"
        android:text = "@string/niyam"
        style="@style/SpLabel" />
    <View
        android:id="@+id/db_v_2"
        android:layout_below="@id/db_tv_2"
       style="@style/SpHorizontalDivider" />
    <ListView
        android:id="@+id/niyamListview_dashboard"
        android:layout_below="@id/db_v_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>




</RelativeLayout>
</ScrollView>